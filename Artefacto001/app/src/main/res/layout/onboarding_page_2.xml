<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:foreground="@color/black_overlay"
        android:src="@drawable/candi_image" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_2"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:paddingBottom="60dp"
        android:paddingHorizontal="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/llLocationBoard"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/llLocationBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@color/black_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            android:contentDescription="@string/location_icon"
            app:tint="@color/lightBrown" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lokasi_candi"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
